// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  phoneE164 String   @unique // Format: +6281234567890
  timezone  String   @default("Asia/Jakarta")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  pets      Pet[]
  schedules Schedule[]
  logs      MessageLog[]
}

model Pet {
  id         String   @id @default(uuid())
  userId     String
  name       String   @default("Obi")
  species    String   @default("Betta")
  tankLiters Float    @default(2.6)
  createdAt  DateTime @default(now())

  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  schedules Schedule[]
  logs      MessageLog[]
}

model MessageTemplate {
  id        String   @id @default(uuid())
  key       String   @unique // daily, bi_daily, weekly, bi_weekly, emergency
  title     String
  body      String
  language  String   @default("id")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  schedules Schedule[]
  logs      MessageLog[]
}

model Schedule {
  id         String   @id @default(uuid())
  userId     String
  petId      String
  templateId String
  cron       String // e.g., "0 9 * * *" for 9 AM daily
  enabled    Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user     User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  pet      Pet             @relation(fields: [petId], references: [id], onDelete: Cascade)
  template MessageTemplate @relation(fields: [templateId], references: [id])
  logs     MessageLog[]
}

model MessageLog {
  id          String    @id @default(uuid())
  scheduleId  String?
  userId      String
  petId       String
  templateId  String
  status      String // sent, completed, snoozed, failed
  fonnteMsgId String?
  sentAt      DateTime  @default(now())
  completedAt DateTime?
  snoozeUntil DateTime?
  note        String?
  retryCount  Int       @default(0)

  schedule Schedule?       @relation(fields: [scheduleId], references: [id])
  user     User            @relation(fields: [userId], references: [id])
  pet      Pet             @relation(fields: [petId], references: [id])
  template MessageTemplate @relation(fields: [templateId], references: [id])
}
